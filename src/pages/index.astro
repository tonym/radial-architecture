---
import BaseLayout from '../layouts/BaseLayout.astro';
import { composeArticleLink } from '../lib/composeArticleLink';

const articleHref = composeArticleLink('radial-architecture');
---

<BaseLayout title="Radial Architecture">
  <section class="hero">
    <h1 class="title">Radial Architecture</h1>
    <p class="lede">Notes on composable commerce, modular systems, and AI-integrated pipelines.</p>

    <nav class="links" aria-label="Primary">
      <a class="link" href={articleHref}>Read the article</a>
    </nav>
  </section>
</BaseLayout>
