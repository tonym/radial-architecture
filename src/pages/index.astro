---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Radial Architecture">
  <main class="home">
    <section class="hero">
      <h1 class="title">Radial Architecture</h1>
      <p class="lede">
        Notes on composable commerce, modular systems, and AI-integrated pipelines.
      </p>

      <nav class="links" aria-label="Primary">
        <a class="link" href="/articles/radial-architecture">Read the article</a>
      </nav>
    </section>
  </main>
</BaseLayout>

<style>
  .home {
    margin: 0 auto;
    padding: var(--space-6) var(--space-2);
    max-width: var(--page-max-width);
  }

  .hero {
    max-width: var(--text-max-width);
  }

  .title {
    margin: 0;
    line-height: 1.15;
  }

  .lede {
    margin: var(--space-1-5) 0 0;
    line-height: var(--line-height-base);
  }

  .links {
    margin: var(--space-3) 0 0;
  }

  .link {
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }
</style>
